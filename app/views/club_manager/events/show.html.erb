<div id="page-content">
  <ul class="breadcrumb breadcrumb-top">
    <li><%= t "admin" %></li>
    <li><%= link_to @event.name, t("do_nothing") %></li>
  </ul>
  <div class="row">
    <div class="col-md-6">
      <%= render "list_new" %>
      <%= render "list_joined_member" %>
    </div>
    <div class="col-md-6 pull-right">
      <div class="block">
        <div class="block-title">
          <h2><strong><%= @event.name %></strong></h2>
          <div class ="pull-right btn-group">
            <%= link_to edit_club_manager_club_event_path(id: @event.id),
              class: "btn btn-nm btn-primary" do %>
              <i class="fa fa-pencil"> <%= t "edit" %></i>
            <% end %>
            <%= link_to new_club_manager_club_event_news_path(event_id: @event.id),
              class: "btn btn-nm btn-warning" do %>
              <i class="fa fa-newspaper-o"> <%= t "club_manager.news.new" %></i>
            <% end %>
          </div>
        </div>
        <div class="row"  >
          <div class="col-md-6 full-img" >
              <%= image_tag @event.image %>
          </div>
          <div class="col-md-6 " >
            <i class="fa fa-money"><strong><%= t "club_manager.event.show_expense" %>
              </strong class="pull-right"><%= @event.expense %>
            </i><br><hr>
            <i class="fa fa-map-marker">
              <strong><%= t "club_manager.event.show_location" %></strong>
              <%= @event.location %>
            </i><br><hr>
            <i class="fa fa-calendar">
              <strong><%= t "club_manager.event.show_date_start" %></strong>
              <%= l @event.date_start, format: :date %>
            </i><br><hr>
            <i class="fa fa-clock-o">
              <strong><%= t "club_manager.event.show_date_end" %></strong>
              <%= l @event.date_end, format: :date %>
            </i><br><hr>
            <i class="fa fa-clock-o">
              <strong><%= t "event_status" %></strong>
              <% if @event.is_finish? %>
                <%= t "finished" %>
              <% else %>
                <%= t "in_process" %>
              <% end %>
            </i><br>
          </div>
        </div><hr>
        <div class="row" >
          <div class="col-md-10 col-md-offset-1 site-block">
            <%= @event.description.html_safe %>
          </div>
        </div><hr>
      </div>
    </div>
  </div>
</div>
